<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:background="@color/rv_item"
    android:layout_marginEnd="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/pdf_cardview">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/rv_item"

        android:orientation="horizontal"
        android:padding="8dp">
        
        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/pdf_logo"
            android:id="@+id/pdf_imageview"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/pdf_name"
            android:text="pdf name"
            android:textSize="18dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:height="50dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:src="@drawable/bookmarked"
            android:id="@+id/bookmarked"
            android:layout_marginLeft="5dp"/>

        
        
    </LinearLayout>

</androidx.cardview.widget.CardView>